{
  "name": "snippet-store",
  "displayName": "snippet-store",
  "description": "",
  "version": "0.0.4",
  "publisher": "margin",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/margin666/vscode-extension-snippet.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "treeView",
        "when": "snippet.setSaveDirectory",
        "contents": "还未设置保存路径\n[设置](command:snippet.createSaveDirectory)"  
      },
      {
        "view": "treeView",
        "when": "snippet.isEmpty",
        "contents": "无可用的仓库\n[新建仓库](command:snippet.createStore)"  
      }
    ],
    "commands": [
      {
        "command": "snippet.importStore",
        "title": "导入",
        "icon": "$(cloud-download)"
      },
      {
        "command": "snippet.exportStore",
        "title": "导出",
        "icon": "$(export)"
      },
      {
        "command": "snippet.removeStore",
        "title": "删除仓库",
        "icon": "$(trashcan)"
      },
      {
        "command": "snippet.createStore",
        "title": "新建仓库",
        "icon": "$(repo-create)"
      },

      {
        "command": "snippet.createSaveDirectory",
        "title": "createSaveDirectory"
      },
      {
        "command": "snippet.saveAsJavaScript",
        "title": "JavaScript"
      },
      {
        "command": "snippet.saveAsHTML",
        "title": "HTML"
      },
      {
        "command": "snippet.saveAsJSON",
        "title": "JSON"
      },
      {
        "command": "snippet.saveAsText",
        "title": "Text"
      },
      {
        "command": "snippet.saveAsCSS",
        "title": "CSS"
      },

      {
        "command": "snippet.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "snippet.createFolder",
        "title": "新建文件夹",
        "icon": "$(new-folder)"
      },
      {
        "command": "snippet.removeItem",
        "title": "移除标签",
        "icon": "$(trashcan)"
      },
      {
        "command": "snippet.removeFolder",
        "title": "删除文件夹",
        "icon": "$(trashcan)"
      },
      {
        "command": "snippet.insert",
        "title": "插入",
        "icon": "$(zap)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
       {
        "id": "snippet",
        "title": "snippet",
        "icon": "$(repo)"
       } 
      ]
    },
    "views": {
      "snippet": [
        {
          "id": "treeView",
          "name": ""
        }
      ]
    },
    "submenus": [
      {
        "id": "snippet",
        "label": "收藏为..."
      }
    ],
    "menus": {
      "snippet": [
        {
          "command": "snippet.saveAsHTML",
          "group": "navigation@2"
        },
        {
          "command": "snippet.saveAsJavaScript",
          "group": "navigation@1"
        },
        {
          "command": "snippet.saveAsJSON",
          "group": "navigation@3"
        },
        {
          "command": "snippet.saveAsText",
          "group": "navigation@5"
        },
        {
          "command": "snippet.saveAsCSS",
          "group": "navigation@4"
        }
      ],
      "editor/context": [
        {
          
          "submenu": "snippet",
          "when": "editorHasSelection && !snippet.setSaveDirectory",
          "group": "9_cutcopypaste@4"
        }
      ],
      "view/title": [
        {
          "command": "snippet.importStore",
          "group": "navigation@3",
          "when": "view == treeView"
        },
        {
          "command": "snippet.createStore",
          "group": "navigation@1",
          "when": "view == treeView"
        },
        {
          "command": "snippet.refresh",
          "group": "navigation@2",
          "when": "view == treeView"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet.createFolder",
          "group": "navigation@1",
          "when": "view == treeView && viewItem !== item"
        },
        {
          "command": "snippet.removeStore",
          "group": "navigation@2",
          "when": "view == treeView && viewItem === store"
        },
        {
          "command": "snippet.exportStore",
          "group": "navigation@3",
          "when": "view == treeView && viewItem === store"
        },
        {
          "command": "snippet.removeItem",
          "group": "inline@2",
          "when": "view == treeView && viewItem == item"
        },
        {
          "command": "snippet.insert",
          "group": "inline@1",
          "when": "view == treeView && viewItem == item"
        },
        {
          "command": "snippet.removeFolder",
          "group": "navigation@2",
          "when": "view == treeView && viewItem == folder"
        }
        
      ]
    },
    "configuration": {
      "title": "snippet",
      "properties": {
       "snippet.config": {
        "type": "object",
        "default": {},
        "description": "代码片段存储的json文件的路径"
       } 
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
